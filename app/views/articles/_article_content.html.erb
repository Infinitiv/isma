<%= link_to(image_tag(attachment_path(first_image(article).id)), attachment_path(first_image(article).id), :rel => "lightbox", :class => "pull-left media-object", :title => first_image(article).name.reverse.from((%r{[.]\w+} =~ first_image(article).name.reverse) + 1).reverse) if first_image(article)%>
<p>
  <% if controller.action_name == 'show' %>
    <%= sanitize_full(article.content) %>
  <% else %>
    <% if article.content.length > 255 %>
      <%= sanitize_truncate(article.content) %>
      <%= link_to ' Читать дальше', article %>
    <% else %>
      <%= sanitize_full(article.content) %>
    <% end %>
  <% end %>