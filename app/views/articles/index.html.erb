<div class="row-fluid">
  <div class="span8">
    <div class="row-fluid">
      <section id="center" class="span12">
        <header>
          <h1>Новости</h1>
        </header>
        <%= link_to('Новая статья', new_article_path) if current_user_writer? %>
	<%= render partial: 'article', collection: @last_news_articles %>
        <%= link_to 'Архив новостей', "archives/news" %>
        <header>
          <h1>Лента</h1>
        </header>
	<%= render @articles %>
        <%= link_to 'Архив статей', "archives/articles" %>
      </section>
    </div>
  </div>
  <div class="span4">
    <div class="row-fluid">
      <section id="right" class="span12">
        <header>
          <h1>Рекомендации</h1>
        </header>
        <%= render(partial: 'article', collection: @personal_articles) || "Здесь будет персонализированная информация" %>
        <header>
          <h1>Анонсы</h1>
        </header>
	<%= render partial: 'article', collection: @anounces_articles %>
        <%= link_to 'Архив анонсов', "archives/anounces" %>
      </section>
    </div>
  </div>
</div>